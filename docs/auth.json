{
  "library": "dj-rest-auth documentation at : https://dj-rest-auth.readthedocs.io/_/downloads/en/latest/pdf/",
  "version": "5.0.1",
  "critical_note": "Version 5.x uses Django Simple JWT for JWT authentication",
  "overview": "A Django app that provides a comprehensive set of REST API endpoints for user registration and authentication tasks, designed to allow front-end clients (like Angular, iOS, or Android apps) to manage users independently via a RESTful interface with a Django backend.",
  "core_features": [
    "User registration with activation",
    "Login and logout",
    "Retrieve and update Django User model",
    "Password change and reset via email",
    "Social media authentication"
  ],
  "project_structure": {
    "dj_rest_auth": "Core authentication (login, logout, password reset/change)",
    "dj_rest_auth.registration": "Registration and social authentication logic"
  },
  "dependencies": {
    "required": ["djangorestframework", "django-rest-framework-authtoken"],
    "optional_for_registration": ["django-allauth", "django-crispy-forms"]
  },
  "absolute_import_paths": {
    "serializers": {
      "LoginSerializer": "from dj_rest_auth.serializers import LoginSerializer",
      "TokenSerializer": "from dj_rest_auth.serializers import TokenSerializer",
      "JWTSerializer": "from dj_rest_auth.serializers import JWTSerializer",
      "JWTSerializerWithExpiration": "from dj_rest_auth.serializers import JWTSerializerWithExpiration",
      "UserDetailsSerializer": "from dj_rest_auth.serializers import UserDetailsSerializer",
      "PasswordResetSerializer": "from dj_rest_auth.serializers import PasswordResetSerializer",
      "PasswordResetConfirmSerializer": "from dj_rest_auth.serializers import PasswordResetConfirmSerializer",
      "PasswordChangeSerializer": "from dj_rest_auth.serializers import PasswordChangeSerializer"
    },
    "registration_serializers": {
      "RegisterSerializer": "from dj_rest_auth.registration.serializers import RegisterSerializer"
    },
    "views": {
      "LoginView": "from dj_rest_auth.views import LoginView",
      "LogoutView": "from dj_rest_auth.views import LogoutView",
      "UserDetailsView": "from dj_rest_auth.views import UserDetailsView",
      "PasswordResetView": "from dj_rest_auth.views import PasswordResetView",
      "PasswordResetConfirmView": "from dj_rest_auth.views import PasswordResetConfirmView",
      "PasswordChangeView": "from dj_rest_auth.views import PasswordChangeView"
    },
    "registration_views": {
      "RegisterView": "from dj_rest_auth.registration.views import RegisterView"
    }
  },
  "installation": {
    "core": {
      "1": "Install: `pip install dj-rest-auth`",
      "2": "Add to `INSTALLED_APPS`: 'rest_framework', 'rest_framework.authtoken', 'dj_rest_auth'",
      "3": "Include URLs: `path('dj-rest-auth/', include('dj_rest_auth.urls'))`",
      "4": "Run migrations: `python manage.py migrate`"
    },
    "optional_registration": {
      "requires": "django-allauth (install with `pip install 'dj-rest-auth[with_social]'`)",
      "apps": "Add 'django.contrib.sites', 'allauth', 'allauth.account', 'allauth.socialaccount', 'dj_rest_auth.registration' to INSTALLED_APPS",
      "setting": "Set `SITE_ID = 1`",
      "urls": "Add `path('dj-rest-auth/registration/', include('dj_rest_auth.registration.urls'))`"
    }
  },
  "configuration_settings_with_defaults": {
    "USE_JWT": {
      "default": "False",
      "effect": "When True, switches from TokenAuthentication to JWT using django-rest-framework-simplejwt",
      "required_install": "pip install djangorestframework-simplejwt"
    },
    "JWT_AUTH_COOKIE": {
      "default": "None",
      "example": "'auth'",
      "purpose": "Name of cookie containing JWT if using cookie-based JWT"
    },
    "JWT_AUTH_REFRESH_COOKIE": {
      "default": "None",
      "example": "'refresh-auth'"
    },
    "JWT_AUTH_HTTPONLY": {
      "default": "True",
      "purpose": "Prevents JavaScript access to JWT cookies for security"
    },
    "SESSION_LOGIN": {
      "default": "True",
      "purpose": "Enables session-based authentication alongside token/JWT"
    },
    "OLD_PASSWORD_FIELD_ENABLED": {
      "default": "False",
      "purpose": "If True, requires old password when changing password"
    },
    "LOGOUT_ON_PASSWORD_CHANGE": {
      "default": "False",
      "purpose": "If True, automatically logs user out after password change"
    },
    "serializer_settings": {
      "LOGIN_SERIALIZER": "dj_rest_auth.serializers.LoginSerializer",
      "TOKEN_SERIALIZER": "dj_rest_auth.serializers.TokenSerializer",
      "JWT_SERIALIZER": "dj_rest_auth.serializers.JWTSerializer",
      "USER_DETAILS_SERIALIZER": "dj_rest_auth.serializers.UserDetailsSerializer",
      "PASSWORD_RESET_SERIALIZER": "dj_rest_auth.serializers.PasswordResetSerializer",
      "REGISTER_SERIALIZER": "dj_rest_auth.registration.serializers.RegisterSerializer"
    }
  },
  "url_configuration": {
    "core_auth_urls": "urlpatterns += [path('api/auth/', include('dj_rest_auth.urls'))]",
    "registration_urls": "urlpatterns += [path('api/auth/registration/', include('dj_rest_auth.registration.urls'))]",
    "endpoints_provided": {
      "dj_rest_auth.urls": ["/login/", "/logout/", "/user/", "/password/reset/", "/password/reset/confirm/", "/password/change/"],
      "dj_rest_auth.registration.urls": ["/register/", "/verify-email/"]
    }
  },
  "social_authentication_setup": {
    "note": "Built upon django-allauth; requires prior allauth social provider configuration.",
    "general_steps": [
      "Add relevant `allauth.socialaccount.providers.*` to INSTALLED_APPS",
      "Configure Social Application in Django admin",
      "Create a view subclassing `SocialLoginView` with a provider-specific adapter",
      "Add a URL for the new view"
    ],
    "provider_examples": {
      "facebook": "Adapter: `FacebookOAuth2Adapter`",
      "twitter": {
        "note": "Uses OAuth 1.0a",
        "adapter": "TwitterOAuthAdapter",
        "serializer": "Must specify `TwitterLoginSerializer`"
      },
      "github": {
        "note": "Uses code (not token directly)",
        "required_attributes": ["`callback_url`", "`client_class = OAuth2Client`"]
      }
    }
  },
  "token_vs_jwt_clarification": {
    "token_authentication": {
      "when_used": "USE_JWT = False (default)",
      "model": "rest_framework.authtoken.models.Token",
      "serializer": "TokenSerializer",
      "header_format": "Authorization: Token <token_key>"
    },
    "jwt_authentication": {
      "when_used": "USE_JWT = True",
      "package": "django-rest-framework-simplejwt",
      "serializer": "JWTSerializer or JWTSerializerWithExpiration",
      "header_format": "Authorization: Bearer <jwt_token>"
    }
  },
  "sample_custom_serializer": {
    "example": "Customizing UserDetailsSerializer to add profile fields",
    "code": "from dj_rest_auth.serializers import UserDetailsSerializer\nfrom django.contrib.auth.models import User\n\nclass CustomUserDetailsSerializer(UserDetailsSerializer):\n    profile_image = serializers.CharField(source=\"userprofile.image_url\")\n    \n    class Meta(UserDetailsSerializer.Meta):\n        fields = UserDetailsSerializer.Meta.fields + ('profile_image',)\n        read_only_fields = ('profile_image',)"
  },
  "additional_resources": {
    "demo_projects": "Includes a jQuery-based demo and a React SPA (Single Page Application) demo.",
    "faq": "Documentation includes a FAQ section.",
    "vulnerability_policy": "Has a documented vulnerability disclosure policy."
  },
  "migration_requirement": "Must run: python manage.py migrate"
}
